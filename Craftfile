# -*- mode: python -*-
# craftr_module(thalmic.myo.sample)

from craftr.ext import rules, platform
from craftr.ext.thalmic.myo import libmyo

sample = platform.ld.link(
  output = 'sample',
  output_type = 'bin',
  inputs = platform.cxx.compile(
    sources = [path.local('sample.cpp')],
    frameworks = [libmyo],
  ),
)

run = rules.run_program(sample)
